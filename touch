name: Build LaTeX

on:
  push:
    paths:
      - "files/cv.tex"  # Trigger only when .tex files in the files directory are modified

jobs:
  build-pdf:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up LaTeX
      uses: dante-ev/latex-action@v2

    - name: Compile LaTeX document
      run: |
        cd files
        latexmk -pdf -interaction=nonstopmode -output-directory=output cv.tex

    - name: Upload PDF to Repository
      run: |
        mv files/output/cv.pdf files/cv.pdf
        git config user.name "github-actions[bot]"
        git config user.email "github-actions[bot]@users.noreply.github.com"
        git add files/cv.pdf
        git commmit -m "update cv"
	git push

